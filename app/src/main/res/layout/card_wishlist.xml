<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del regalo"/>

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del regalo"/>

        <TextView
            android:id="@+id/txtFechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de creación: 01/01/2023"/>

        <TextView
            android:id="@+id/txtFechaFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha final: 31/12/2023"/>

        <TextView
            android:id="@+id/txtNumeroRegalos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de regalos: 5"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

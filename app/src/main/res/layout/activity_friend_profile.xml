<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileEmail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".fragments.ProfileFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_friend_picture"
            android:layout_width="131dp"
            android:layout_height="111dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="-117dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/profile_picture" />

        <TextView
            android:id="@+id/profileFriendName"
            android:layout_width="225dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView"
            android:layout_alignBottom="@+id/RecyclerViewFriendsLists"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="367dp"
            android:drawableStart="@drawable/ic_profile"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/profileFriendEmail"
            android:layout_width="239dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageView"
            android:layout_alignBottom="@+id/RecyclerViewFriendsLists"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="239dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="325dp"
            android:drawableStart="@drawable/ic_email"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="511dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="-266dp"
            android:text="@string/listasDE"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="-216dp"
            android:layout_marginBottom="12dp"
            android:background="?android:attr/listDivider"
            android:outlineAmbientShadowColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewFriendsLists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="551dp" />


    </RelativeLayout>
</LinearLayout>